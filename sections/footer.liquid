<footer class="w-full h-fit">
  <div class="container mx-auto h-full py-10">
      {% comment %} footer upper {% endcomment %}
      <div class="block h-fit sm:flex sm:justify-center sm:items-start sm:flex-wrap sm:w-full sm:gap-2 lg:gap-0 lg:justify-between">
        <div class="w-full h-fit py-4 flex justify-center items-center flex-col gap-12 mb-3 lg:w-[300px]">
          <h4 class="text-xl font-medium text-black">
            {% if section.settings.footer_text %}
              {{ section.settings.footer_text }}
              {% else %}
              Join our global community                
            {% endif %}
          </h4>
          <p class="text-sm font-normal text-gray-400 text-center mx-4 sm:mx-10">
            {% if section.settings.footer_description %}
              {{ section.settings.footer_description }}
              {% else %}
             Lorem ipsum dolor sit amet consectetur adipisicing elit. Animi necessitatibus ducimus voluptatum eaque    
            {% endif %}
          </p>
          <div class="w-[300px] h-[78px] flex justify-center items-center sm:w-[500px] lg:w-[300px]">
            <input class="w-[190px] py-2 border bg-white px-2 rounded-l-lg sm:w-[390px] lg:w-[190px]" placeholder="Email" type="email" name="email">
            <button class="w-[100px] bg-blue-500 text-white py-2 rounded-r-lg ">Sign Up</button>
          </div>
        </div>
        {% if section.blocks.size == 1 %}
            {% for footer_block in section.blocks %}
              {% case footer_block.type %}
                {% when 'first_block' %}
                  <div class="py-4 mb-3 flex flex-col justify-center items-center gap-4 sm:w-[300px] sm:mb-0 lg:w-[200px]">
                    <h5 class="text-base text-black font-semibold uppercase">
                      {% if footer_block.settings.first_block_text_id %}
                        {{ footer_block.settings.first_block_text_id }}
                      {% endif %}
                    </h5>
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.first_block_submenu_url_one_id }}">
                      {% if footer_block.settings.first_block_submenu_title_one_id %}
                        {{ footer_block.settings.first_block_submenu_title_one_id }}
                      {% endif %}                     
                    </a>   
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.first_block_submenu_url_two_id }}">
                      {% if footer_block.settings.first_block_submenu_title_two_id %}
                        {{ footer_block.settings.first_block_submenu_title_two_id }}
                      {% endif %}                     
                    </a> 
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.first_block_submenu_url_three_id }}">
                      {% if footer_block.settings.first_block_submenu_title_three_id %}
                        {{ footer_block.settings.first_block_submenu_title_three_id }}
                      {% endif %}                     
                    </a> 
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.first_block_submenu_url_four_id }}">
                      {% if footer_block.settings.first_block_submenu_title_four_id %}
                        {{ footer_block.settings.first_block_submenu_title_four_id }}
                      {% endif %}                     
                    </a> 
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.first_block_submenu_url_five_id }}">
                      {% if footer_block.settings.first_block_submenu_title_five_id %}
                        {{ footer_block.settings.first_block_submenu_title_five_id }}
                      {% endif %}                     
                    </a>           
                  </div>
                {% when 'second_block' %}
                  <div class="py-4 mb-3 flex flex-col justify-center items-center gap-4 sm:w-[300px] sm:mb-0 lg:w-[200px]">
                    <h5 class="text-base text-black font-semibold uppercase">
                      {% if footer_block.settings.second_block_text_id %}
                        {{ footer_block.settings.second_block_text_id }}
                      {% endif %}
                    </h5>
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.second_block_submenu_url_one_id }}">
                      {% if footer_block.settings.second_block_submenu_title_one_id %}
                        {{ footer_block.settings.second_block_submenu_title_one_id }}
                      {% endif %}                     
                    </a>   
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.second_block_submenu_url_two_id }}">
                      {% if footer_block.settings.second_block_submenu_title_two_id %}
                        {{ footer_block.settings.second_block_submenu_title_two_id }}
                      {% endif %}                     
                    </a> 
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.second_block_submenu_url_three_id }}">
                      {% if footer_block.settings.second_block_submenu_title_three_id %}
                        {{ footer_block.settings.second_block_submenu_title_three_id }}
                      {% endif %}                     
                    </a> 
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.second_block_submenu_url_four_id }}">
                      {% if footer_block.settings.second_block_submenu_title_four_id %}
                        {{ footer_block.settings.second_block_submenu_title_four_id }}
                      {% endif %}                     
                    </a> 
                    <a class="text-sm text-gray-400 font-light hover:underline block lg:text-base lg:px-2 lg:text-center" href="{{ footer_block.settings.second_block_submenu_url_five_id }}">
                      {% if footer_block.settings.second_block_submenu_title_five_id %}
                        {{ footer_block.settings.second_block_submenu_title_five_id }}
                      {% endif %}                     
                    </a>           
                  </div>
              {% endcase %}
            {% endfor %}
          {% else %}
