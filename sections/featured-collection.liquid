<section  class="featured_collection w-full relative h-[350px] sm:h-[380px] lg:h-[330px]">
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[90%] min-h-[250px]  lg:w-[990px] lg:min-h-0 lg:h-[190px] xl:w-[1200px] 2xl:w-[1480px]">
    <div class="grid gap-4 grid-cols-3 grid-rows-2 lg:grid-cols-6 lg:grid-rows-0 lg:gap-3">
      {% for collection in section.settings.collection_list %}
          <a class="py-1 flex justify-between items-center flex-col w-full" href="{{ collection.url }}">
            <img class="rounded-3xl {% if section.settings.featured_collection_shadow_checkbox_id %} shadow-{{ section.settings.featured_collection_shadow_id }} {% endif %} {% if section.settings.featured_collection_shadow_hover_checkbox_id %} lg:hover:shadow-{{ section.settings.featured_collection_shadow_hover_id }} {% endif %}"  src="{{ collection.featured_image |  image_url: width:full  }}" alt="{{ collection.title }}">
            <p class="text-center mt-3 text-base text-gray-500 font-normal">{{ collection.title }}</p>
          </a>
      {% endfor %}
    </div>  
  </div>
</section>
<style>
  .featured_collection{
    background-color: {{ section.settings.featured_collection_background_id }};
  }
</style>
{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Choose 6 Collections in the List",
      "info": "You Must choose 6 collections in the collectins list"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 6
    },
    {
      "type": "header",
      "content": "Featured Colleaction Background Color",
      "info": "Chose the Featured Colleaction Collor. By Default is set to white"
    },
    {
      "type": "color",
      "id": "featured_collection_background_id",
      "label": "Featured Collection Background",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Activate Shadow on Collection box?",
      "info": "Check and select your level of shadow."
    },
    {
      "type": "checkbox",
      "id": "featured_collection_shadow_checkbox_id",
      "label": "Activate Shadow on Collections?",
      "default": false
    },
    {
      "type": "select",
      "id": "featured_collection_shadow_id",
      "label": "Shadow",
      "options": [
        {
          "value": "sm",
          "label": "Shadow Small"
        },
        {
          "value": "md",
          "label": "Shadow Medium"
        },
        {
          "value": "lg",
          "label": "Shadow Large"
        },
        {
          "value": "xl",
          "label": "Shadow Extra Large"
        },
        {
          "value": "2xl",
          "label": "Shadow 2x Extra Large"
        }
      ],
      "default": "sm"
    },
    {
      "type": "checkbox",
      "id": "featured_collection_shadow_hover_checkbox_id",
      "label": "Activate Shadow on Hover For Collections?",
      "default": false
    },
    {
      "type": "select",
      "id": "featured_collection_shadow_hover_id",
      "label": "Shadow Hover",
      "options": [
        {
          "value": "sm",
          "label": "Shadow Small"
        },
        {
          "value": "md",
          "label": "Shadow Medium"
        },
        {
          "value": "lg",
          "label": "Shadow Large"
        },
        {
          "value": "xl",
          "label": "Shadow Extra Large"
        },
        {
          "value": "2xl",
          "label": "Shadow 2x Extra Large"
        }
      ],
      "default": "sm"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}
