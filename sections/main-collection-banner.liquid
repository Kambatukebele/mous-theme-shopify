<section class="w-full h-fit mt-3 mb-5">
  <div class="container mx-auto">
    <div class="my-2">
      <div class="flex justify-start items-center">
        <p class="text-xs text-black font-normal">
          <a href="{{ routes.root_url }}">Home</a>
        </p>
        <span class="mx-2 block">/</span>
        <p class="text-xs text-black font-normal">
          <a href="#">{{ collection.title }}</a>
        </p>
      </div>
      {% if section.settings.show_title_collection_id %}
        <h4 class="text-lg text-black">{{ collection.title }}</h4>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Activate or Deactivate Title Collection"
    },
    {
      "type": "checkbox",
      "id": "show_title_collection_id",
      "label": "Collection Title",
      "default": true
    }
  ]
}
{% endschema %}
